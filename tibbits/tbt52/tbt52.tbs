		#if PLATFORM_TYPE_32
			tmp=value(0)*&h1000000
			r=tmp
			tbt52_bit_error_compensation(3)=tbt52_bit_error_compensation(3)+r
		#else
			tbt52_bit_error_compensation(3)=tbt52_bit_error_compensation(3)+value(0)*&h1000000
